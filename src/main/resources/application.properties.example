# Example application properties (no secrets)
spring.application.name=journalApp
server.port=8080

# MongoDB - set via environment variable in production
spring.data.mongodb.uri=${SPRING_DATA_MONGODB_URI}
spring.data.mongodb.database=${SPRING_DATA_MONGODB_DATABASE:journaldb}

# Weather API
weather.api.key=${WEATHER_API_KEY}

# Mail (use environment variables for username/password)
spring.mail.host=${SPRING_MAIL_HOST:smtp.gmail.com}
spring.mail.port=${SPRING_MAIL_PORT:587}
spring.mail.username=${SPRING_MAIL_USERNAME}
sring.mail.password=${SPRING_MAIL_PASSWORD}

# Redis
spring.data.redis.url=${SPRING_DATA_REDIS_URL}
spring.data.redis.ssl.enabled=${SPRING_DATA_REDIS_SSL_ENABLED:false}

# OAuth2 Google
spring.security.oauth2.client.registration.google.client-id=${GOOGLE_CLIENT_ID}
spring.security.oauth2.client.registration.google.client-secret=${GOOGLE_CLIENT_SECRET}

# Example: override active profile via env
spring.profiles.active=${SPRING_PROFILES_ACTIVE:dev}

